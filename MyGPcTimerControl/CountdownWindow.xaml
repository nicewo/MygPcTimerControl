<Window
    x:Class="MyGPcTimerControl.CountdownWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="300"
    Height="100"
    AllowsTransparency="True"
    Background="#DD000000"
    Left="10"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Top="10"
    Topmost="True"
    WindowStyle="None">
    <Grid>
        <TextBlock
            x:Name="CountdownText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="32"
            Foreground="White"
            Text="30" />
    </Grid>
</Window>